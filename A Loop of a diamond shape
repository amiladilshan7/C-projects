//A Loop of a diamond shape
#include <iostream>
using namespace std;

int main()

{
    int a,n;


while(n>0)
{

for (int i=0;i<10; i++)
{
    for(int j=0; j<=i; j++)

    {
        cout<<" ";

    }
    for(int j =1; j<10-i; j++)
    {
        cout<<"*";

    }


    for(int j =0; j<10-i; j++)

    {
        cout<<"*";

    }
    cout<<endl;

}


for(int i =0; i<10;i++)
{


    for(int j=0;j<10-i;j++)
    {
        cout<<" ";

    }
    for(int j=0;j<=i;j++)
    {
        cout<<"*";
    }
    for(int j=0;j<i;j++)
    {
        cout<<"*";

    }
    cout<<endl;

}
a++;

}



    return 0;
}
